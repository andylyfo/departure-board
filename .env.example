# UK Train Departure Display - Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your National Rail API key
# Get one from: https://www.nationalrail.co.uk/developers/
apiKey=YOUR_API_KEY_HERE

# REQUIRED: Departure station CRS code
# Examples: PAD (Paddington), EUS (Euston), KGX (Kings Cross)
departureStation=PAD

# OPTIONAL: Filter trains to only show those going to this destination
# Leave empty to show all trains
destinationStation=

# OPTIONAL: Filter trains to only show those from this platform
# Examples: 5, 5A, 5B (leave empty to show all platforms)
screen1Platform=

# Display settings
targetFPS=70
refreshTime=180
showDepartureNumbers=FALSE
firstDepartureBold=TRUE

# Operating hours (24-hour format, leave empty for always-on)
# Example: 6-23 means display between 6am and 11pm
operatingHours=

# Time offset for departures (in minutes)
timeOffset=0

# Station name to display when no trains are scheduled
outOfHoursName=London Paddington

# Show departure time for each calling point
individualStationDepartureTime=FALSE
